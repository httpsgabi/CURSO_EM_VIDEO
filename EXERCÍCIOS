//Exercicio 22 

algoritmo "Exercicio 22"
// Data : 08/02/2022
var
   nome: caractere
  idade: inteiro
inicio
   Escreval("Digite o seu nome: ")
   Leia(nome)
   Escreval("Digite sua idade")
   Leia(idade)
     se (idade >= 18) entao
        se (idade = 18) entao
           Escreval("Voce ja possui a idade minima e deve se alistar esse ano")
        senao
           Escreval("Voce deveria ter se alistado a ",(idade - 18)," anos atras")
        FimSe
     senao
          Escreval("Voce ainda não possui idade para se alistar, mas faltam ",(18-idade)," anos")
     FimSe
fimalgoritmo

//Exercicio 23

algoritmo "semnome"
// Data : 08/02/2022
var
  nome: caractere
  sexo: inteiro
  valor_produto, desconto_fixo: real
  
inicio
   Escreval("Digite seu nome: ")
   Leia(nome)
   
   Escreval("Digite o seu sexo: ")
   Escreval("1 | Homem")
   Escreval("2 | Mulher")
   Leia(sexo)
   
   Escreval("Digite o valor do produto")
   Leia(valor_produto)
   
   se (sexo = 1) OU (sexo = 2) entao
      se (sexo = 1) entao
         desconto_fixo <- ((valor_produto * 5)/100)
         Escreval("Voce recebeu um desconto de 5% do total: $", desconto_fixo)
         Escreval("O novo preco do produto eh de: $",(valor_produto - desconto_fixo))
      senao
         desconto_fixo <- ((valor_produto * 13)/100)
         Escreval("Voce recebeu um desconto de 13% do total: $", desconto_fixo)
         Escreval("O novo preco do produto eh de: $",(valor_produto - desconto_fixo))
      FimSe
   senao
        Escreval("Numero invalido")
   FimSe
fimalgoritmo

//Exercicio 24

algoritmo "Exercicio 24"
// Data : 08/02/2022
var
   distancia, passagem: real
inicio
   Escreval("Digite a distância ate o local ao qual quer ir")
   Leia(distancia)
   
   se (distancia >= 0 ) E (distancia <= 200) entao
      passagem <- (distancia * 0.5)
      Escreval("O valor da passagem eh de: $", passagem)
   senao
        passagem <- (distancia * 0.45)
        Escreval("O valor da passagem eh de: $", passagem," reias")
   FimSe
fimalgoritmo

//Exercicio 25

algoritmo "Exercício 25"
// Data : 08/02/2022
var
  L1, L2, L3: real
inicio
   Escreval("Digite o valor dos 3 segmentos de retas para saber se formam um triângulo")
   Escreva("Lado | 1 : ")
   leia(L1)
   Escreva("Lado | 2 : ")
   leia(L2)
   Escreva("Lado | 3 : ")
   leia(L3)
   
   se (L1 < Abs(L2 - L3)) E (L2 < Abs(L1 - L3)) E (L3 < Abs(L1 - L2)) entao
      se (L1 != L2) E (L2 != L3) E (L1 != L3) entao
         Escreval("O triangulo existe, e eh ESCALENO")
      FimSe
      se (L1 = L2) E (L2 = L3) E (L1 != L3) entao
         Escreval("O triangulo existe, e eh ISOCELES")
      FimSe
      se (L1 = L2) E (L2 = L3) entao
         Escreval("O triangulo existe, e eh EQUILATERO")
      FimSe
   senao
        Escreval("Os segmentos de retas nao formem um triangulo")
   FimSe
   
fimalgoritmo

//Exercicio 26

algoritmo "Exercício 26"
// Data : 09/02/2022
var
   n1, n2: real
inicio
   Escreva("Escreva o numero 1: ")
   Leia(n1)
   Escreva("Escreva o numero 2: ")
   Leia(n2)
   
   se (n1 = n2)entao
      Escreval(n1, " eh igual a", n2)
   senao
        se (n1 > n2) entao
           Escreval(n1, " eh maior que", n2)
        senao
             Escreval(n2," eh maior que", n1)
        FimSe
   FimSe
   
fimalgoritmo

//Exercicio 27

algoritmo "Exercício "
// Data : 09/02/2022
var
   n1, n2, media: real
inicio
   Escreva("Escreva a nota 1: ")
   Leia(n1)
   Escreva("Escreva a nota 2: ")
   Leia(n2)
   
   media <- ((n1 + n2)/2)
   
   se (media >= 7) entao
      Escreval("O aluno foi APROVADO")
   senao
        se(media >= 5) E (media <= 6.9) entao
          Escreval("O aluno esta em RECUPERACAO")
        senao
             Escreval("O aluno foi REPROVADO")
        FimSe
   FimSe
   
fimalgoritmo

//Exercicio 28

algoritmo "Exercício 28"
// Data : 09/02/2022
var
   l1, l2, area: real
inicio
   Escreva("Digite o lado 1(m): ")
   Leia(l1)
   Escreva("Digite o lado 2(m): ")
   Leia(l2)
   
   area <- (l1*l2)
   
   se (area > 500) entao
      Escreval("O terreno eh um TERRENO VIP")
   senao
        se (area >= 100) E (area <= 500) entao
           Escreval("O terreno eh um TERRENO MASTER")
        senao
             Escreval("O terreno eh um TERRENO POPULAR")
        FimSe
   FimSe
fimalgoritmo

//Exercicio 29

algoritmo "Exercício 29"
// Data : 09/02/2022
var
     nome: caractere
     anos: inteiro
     salario, aumento: real
inicio
      Escreva("Digite o nome do funcionario: ")
      Leia(nome)
      Escreva("Digite o tempo de empresa do funcionario (em anos): ")
      Leia(anos)
      Escreva("Digite o salario do funcionario: $")
      Leia(salario)
      
      se (anos < 3) entao
          aumento <- ((salario*3) /100)
          Escreval("O aumento foi de: $",aumento)
          Escreval("Salario ANTIGO: $", salario)
          Escreval("Salario NOVO: $", (salario + aumento))
      senao
         se (anos >= 3) E (anos < 10)entao
          aumento <- ((salario*12.5) /100)
          Escreval("O aumento foi de: $",aumento)
          Escreval("Salario ANTIGO: $", salario)
          Escreval("Salario NOVO: $", (salario + aumento))
         senao
              aumento <- ((salario*20) /100)
              Escreval("O aumento foi de: $",aumento)
              Escreval("Salario ANTIGO: $", salario)
              Escreval("Salario NOVO: $", (salario + aumento))
         FimSe
      FimSe

fimalgoritmo
