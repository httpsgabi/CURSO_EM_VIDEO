//Exercicio 13

// Data : 03/02/2022

var
n1, vlr_aumento: real
inicio


Escreval("Digite o valor do seu salario para obter a quantidade de aumetno")
Leia(n1)

vlr_aumento <- (1+(15/100))

Escreval("Salario atual: ", n1)
Escreval("O aumento obtido foi de: ", (n1*vlr_aumento) - n1)
Escreval("O salario passa a valer: ",(n1*vlr_aumento))

fimalgoritmo

//Exercicio 14

// Data : 03/02/2022
 
var
dias, kms, total_dias, total_kms: real
inicio
 

Escreval("Digite a quantidade de dias que está em posse do veículo: ")
Leia(dias)
Escreval("Digite a quantidade de Km's rodados com o veículo: ")
Leia(kms)

total_dias <- (dias*90)
total_kms <- (kms*0.2)

Escreval("O total pago pelos dias eh de: $", total_dias)
Escreval("O total pago pelos Km's eh de: $", total_kms)

Escreval("A quantidade total a ser paga eh de: $", (total_dias + total_kms))

fimalgoritmo

//Exercicio 15

// Data : 03/02/2022
var
dias, horas_tot_dias, valor_tot_dias: real
inicio

Escreval("Digite a quantidade de dias trabalhados: ")
Leia(dias)

horas_tot_dias <- (dias*8)
valor_tot_dias <- (horas_tot_dias*25)

Escreval("A dua quantidade de horas trabalhadas eh de: ", horas_tot_dias)
Escreval("O seu salario eh de: $", valor_tot_dias)

fimalgoritmo

//Exercicio 16

// Data : 03/02/2022
var
cigarros_por_dia, anos_d_cigarro, cigarros_fumados_por_ano, minutos_perdidos: inteiro
dias_perdidos: real

inicio
 Escreval("Iremos calcular sua reducao de vida baseada na quantidade de cigarrs que voce fuma")


 Escreva("Digite a qantidade de cigarros que voce fuma por dia: ")
 Leia(cigarros_por_dia)
 
 Escreva("Digite a quantos anos voce fuma: ")
 Leia(anos_d_cigarro)
 
 cigarros_fumados_por_ano <- ((cigarros_por_dia*365)*anos_d_cigarro)
 minutos_perdidos <- (cigarros_fumados_por_ano*10)
 
 dias_perdidos <- (minutos_perdidos/1440)
 
 Escreval("Voce ja perdeu ",int(dias_perdidos)," dias da sua vida")

fimalgoritmo
