algoritmo "Exercicio 42"
// Data : 17/9/2022

var
   cont, cont2, cont3: inteiro
inicio

      Escreval("Digite um valor inteiro e positvo")
      Leia(cont)
      
      cont2 <- cont
      cont3 <- 1
      
      Enquanto (cont.>=1) E (cont <= cont2)faca
               Escreval(cont3)
               cont3 <- (cont3 + 1)
      FimEnquanto
