algoritmo "Exercício 38"
// Data : 15/9/2022
var
  contador: inteiro
inicio

      contador <- 6

      Enquanto (contador >=6) E (contador <=11) faca
      Escreval(contador)
      contador <- (contador + 1)
      FimEnquanto

      Escreval("Acabou!!!")

