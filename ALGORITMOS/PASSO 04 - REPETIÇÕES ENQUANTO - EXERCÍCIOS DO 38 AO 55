algoritmo "Exercicio 43"
// Data : 17/9/2022
var
   cont, cont2, divisor: inteiro
inicio

      Escreval("Digite o numero onde quer começar a contar")
      Leia(cont)
      Escreval("Digite o numero divisor")
      Leia(divisor)
      
      
      cont2 <- cont
      
      Enquanto (cont2 >=1) E (cont2 <= cont) faca
               Se ((cont2%divisor) = 0) entao
                  Escreval("[",cont2,"]")
               senao
                    Escreval(cont2)
               FimSe
      cont2 <- (cont2 -1)
      FimEnquanto

fimalgoritmo

algoritmo "Exercicio 44"
// Data : 17/9/2022
var
   valInicio, valFinal, incremento, cont: inteiro
inicio

     Escreval("Digite o valor inicial da contagem:")
     Leia(valInicio)
     Escreval("Digite o valor final da contagem:")
     Leia(valFinal)
     Escreval("Digite o valor do incremento")
     Leia(incremento)
     
     cont <- valInicio
     
     Enquanto (cont >= valInicio) E (cont <= valFinal) faca
     Escreval(cont)
     cont <- (cont + incremento)
     FimEnquanto
     
fimalgoritmo

algoritmo "Exercicio 45"
// Data : 17/9/2022
var
   valInicio, valFinal, incremento, cont: inteiro
inicio

     Escreval("Digite o valor inicial da contagem:")
     Leia(valInicio)
     Escreval("Digite o valor final da contagem:")
     Leia(valFinal)
     Escreval("Digite o valor do incremento")
     Leia(incremento)

     cont <- valInicio

     Se (valFinal > valInicio) entao
        Enquanto (cont >= valInicio) E (cont <= valFinal) faca
        Escreval(cont)
        cont <- (cont + incremento)
        FimEnquanto
     senao
        Enquanto (cont <= valInicio) E (cont >= valFinal) faca
        Escreval(cont)
        cont <- (cont - incremento)
        FimEnquanto
     FimSe

fimalgoritmo
